<%= render partial: "shared/header" %>

<div class="content">
  <div class="contents">
    <div class="container">
      <h2>編集する</h2>

      <%= form_with model: @tweet, local: true do |f| %>

      <%= render partial: 'shared/tweet_error_messages', model: @tweet %>

        <div class="field">
          <%= f.label :"投稿画像" %><span class="input-need">※必須</span><br />
          <%= f.label :image, "画像をアップロード", class: "image_input_btn"%>
          <%= f.file_field :image, class:"image_btn" %>
        </div>

        <div class="field">
          <%= f.label :"投稿タイトル"%><span class="input-need">※必須</span><br />
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :"説明"%><br />
          <%= f.text_area :description %>
        </div>

        <div class="field">
          <%= f.label :"花の名前"%><br />
          <%= f.text_field :flower_name %>
        </div>

        <div class="field">
          <%= f.label :"購入した県名"%><br />
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecuture-select"}) %>
        </div>

        <div class="field">
          <%= f.label :"購入した市町村" %><br />
          <%= f.text_field :city %>
        </div>

        <div class="field">
          <%= f.label :"購入した店の名前" %><br />
          <%= f.text_field :shop_name %>
        </div>

        <div class="field">
          <%= f.label :"おすすめ度"%><span class="input-text">(1〜5の数字で入力してください)</span><br />
          <%= f.number_field :recommended, min: 1, max: 5 %>
        </div>

        <div class="actions">
          <%= f.submit "更新" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<%= render partial: "shared/second_footer" %>

          

